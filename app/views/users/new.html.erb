<div class="container">
<h1>Register
<%= link_to "Back", products_path, class: 'btn btn-danger' %>
</h1>
<div class="card">
  <div class="card-body">
      <%= form_with model: @user do |form| %>
        <div class="form-group">
          <%= form.label :'Email' %>
          <%= form.text_field :email , autofocus: true, class: "form-control", placeholder: 'Input email..', autocomplete: "email"%>
          <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class='text-danger'><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.label :'Password' %>
          <%= form.password_field :password , class: "form-control", placeholder: 'Input password..', autocomplete: "new-password"%>
            <% @user.errors.full_messages_for(:password).each do |message| %>
                <div class='text-danger'><%= message %></div>
            <% end %>
        </div>
        <div class="form-group">
          <%= form.label :'Confirm password' %>
          <%= form.password_field :password_confirmation , class: "form-control", placeholder: 'Input confirm password..', autocomplete: "new-password" %>
            <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class='text-danger'><%= message %></div>
            <% end %>
        </div>
      
        <div class="form-group">
          <%= form.label :'Date born' %>
          <%= form.text_field :date_born , class: "form-control", placeholder: 'Input date..', type: :date%>
            <% @user.errors.full_messages_for(:date_born).each do |message| %>
                <div class='text-danger'><%= message %></div>
            <% end %>
        </div>
       
        <div class="form-group">
          <%= form.label :'Phone' %>
          <%= form.text_field :phone , class: "form-control", placeholder: 'Input number phone..'%>
            <% @user.errors.full_messages_for(:phone).each do |message| %>
                <div class='text-danger'><%= message %></div>
            <% end %>
        </div>
        <div>
          <%= form.submit:'Register' , class: 'btn btn-primary'%>
        </div>
      <% end %>
  </div>
</div>
</div>