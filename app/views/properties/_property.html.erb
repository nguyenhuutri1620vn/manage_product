<tr>
    <td><%=property.title%></td>
    <td><%=property.quantity%></td>
    <% if property.image.attached? %>
        <td>
            <div class='image-property'>
                <%= image_tag(property.image, style: 'width:100%')%>
            </div>
        </td>
    <%end%>
    <td><%= link_to 'Destroy',product_property_path(property.product_id, property.id), class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
