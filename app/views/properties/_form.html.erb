<%= form_with model: [@product, @product.properties.build] do |form| %>
    <div class="form-group">
        <%= form.label :Title %><br>
        <%= form.text_field :title, class:'form-control'%>
    </div>
    <div class="form-group">
        <%= form.label :Quantity %><br>
        <%= form.text_field :quantity, class:'form-control'%>
    </div>
    <div class="form-group">
        <%= form.label :Image %>
        <%= form.file_field :image , class:'form-control'%>
        <% if @product.properties.build.image.attached? %>
            <div class='image-product my-2'> 
                <%= image_tag(@product.properties.build.image, style: 'width:100%')%>
            </div> 
      <% end %>
    </div>
    <div class='mt-2'>
        <%= form.submit %>
    </div>
<% end %>