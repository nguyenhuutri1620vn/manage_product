<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :sku %>
    <%= form.text_field :sku , class:'form-control w-25'%>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title , class:'form-control w-25'%>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price , class:'form-control w-25'%>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.text_field :quantity , class:'form-control w-25'%>
  </div>

  <div class="form-group">
    <%= form.label :Image %>
    <%= form.file_field :image , class:'form-control w-25'%>
    <% if product.image.attached? %>
    <div class='image-product my-2'> 
        <%= image_tag(product.image, style: 'width:100%')%>
    </div> 
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>

