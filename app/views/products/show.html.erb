<div class="container py-2">
  <%= link_to 'Back', products_path, :class => 'btn btn-danger mb-2' %>
  <p id="notice" class='text-success'><%= notice %></p>
  <div class="card">
    <h5 class="card-header"><%= @product.title %>
    <%= link_to 'Edit', edit_product_path(@product), :class => 'btn btn-warning' %>
    </h5>
    <div class="card-body">
      <div class='row align-items-start'>
          <div class='col'>
          <p class="lead">
            <strong>Sku:</strong>
            <%= @product.sku %>
          </p>

           <p class="lead">
            <strong>Category:</strong>
            <%= @product.cateID %>
          </p>

          <p class="lead"> 
            <strong>Price:</strong>
            <%= @product.price %>
          </p>

          <p class="lead">
            <strong>Quantity:</strong>
            <%= @product.quantity %>
          </p>
          <% if @product.property_ids.any? %>
            <p lass="lead">Properties</p>
            <table class="table table-hover table-bordered" >
              <thead>
                  <tr>
                      <td>Title</td>
                      <td>Quantity</td>
                      <td>Image</td>
                      <td>Delete</td>
                  </tr>
              </thead>
              <tbody>
                <%= render @product.properties %>
              </tbody>
            </table>
          <% else %>
            <p>Product haven't any properties</p>
          <% end %>
          <p class="lead">
            <strong>Image:</strong>
              <div class='image-product'>
                <%= image_tag(@product.image, style: 'width:100%')%>
              </div>
          </p> 
          </div>
          <div class='col'>
            <div class='card w-50 float-end'>
            <h4 class="card-header">Add properties</h4>
              <div class='card-body'>
                <%= render 'properties/form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
